@import 'nib'

// Great baseline colors from http://designmodo.github.io/Flat-UI/
flat_turquoise ?= #1ABC9C
flat_green_sea ?= #16A085

flat_emerald ?= #2ECC71
flat_nephritis ?= #27AE60

flat_peter_river ?= #3498DB
flat_belize_hole ?= #2980B9

flat_amethyst ?= #9B59B6
flat_wisteria ?= #8E44AD

flat_wet_asphalt ?= #34495E
flat_midnight_blue ?= #2C3E50

flat_sun_flower ?= #F1C40F
flat_orange ?= #F39C12

flat_carrot ?= #E67E22
flat_pumpkin ?= #D35400

flat_alizarin ?= #E74C3C
flat_pomegranate ?= #C0392B

flat_clouds ?= #ECF0F1
flat_silver ?= #BDC3C7

flat_concrete ?= #95A5A6
flat_asbestos ?= #7F8C8D

html, body
  width: 100%
  height: 100%

body
  font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight: 300
  font-size: 32px
  line-height: 1.5em
  color: flat_midnight_blue
  font-feature-settings: 'kern'
  -moz-font-feature-settings: 'kern'
  -webkit-font-feature-settings: 'kern'

@media (max-width: 767px)
  body > .container
    font-size: 20px


h1
  font-size: 1.5em
  line-height: 2em
  text-align: center
  margin: 0
  margin-top: 1em

p
  margin-top: 1.5em
  margin-bottom: 1.5em

.btn
  border: none
  border-radius: 0
  font-size: 1em
  font-weight: 300
  padding: 0.75em 0
  line-height: 1.5em

.btn-lg
  font-size: 1.5em

.btn-success
  background: flat_emerald
  transition: background .1s linear
  &:hover
    background: flat_nephritis

.btn-danger
  background: flat_alizarin
  transition: background .1s linear
  &:hover
    background: flat_pomegranate

h1, h2, h3, h4, h5, h6, .headline
  font-family: 'Trocchi', serif
